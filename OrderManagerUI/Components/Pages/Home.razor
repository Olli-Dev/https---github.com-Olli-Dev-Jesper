@page "/"

<MudText Typo="Typo.h3" GutterBottom="true">Velkommen til Order Manager</MudText>
<MudText Typo="Typo.body1" Class="mb-8">Her kan du administrere produkter, konfigurationer, metadata og rentetrapper.</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="4" Class="rounded-lg">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Produkter</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.ShoppingBag" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Administrer dine produkter og deres grundlæggende informationer.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" href="/products">Gå til produkter</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="4" Class="rounded-lg">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">System Status</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Tjek systemets helbred og databaseforbindelser.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Se status</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

